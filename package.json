{
  "name": "ricecake-v2",
  "version": "2.0.0",
  "description": "학식 메뉴를 학교 식판 스타일 이미지로 변환하는 서비스",
  "main": "dist/index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "nodemon --config nodemon.json",
    "dev:frontend": "vite",
    "build": "npm run build:frontend",
    "build:backend": "tsc --project tsconfig.backend.json",
    "build:frontend": "vite build",
    "start": "node dist/backend/index.js",
    "vercel-build": "npm run build:frontend",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "학식",
    "메뉴",
    "이미지",
    "AI",
    "식판"
  ],
  "author": "RiceCake Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "openai": "^4.20.1",
    "redis": "^4.6.10",
    "react": "^19.1.10",
    "react-dom": "^19.1.7",
    "sharp": "^0.32.6",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.8.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/uuid": "^9.0.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vitejs/plugin-react": "^4.1.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.50.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2",
    "vite": "^4.4.9"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
